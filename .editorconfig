root = true

[*]
end_of_line = crlf
insert_final_newline = true
indent_style = space
indent_size = 4
charset = utf-8
trim_trailing_whitespace = true

[*.cs]
#######################################
# STRICT MODE: All Warnings as Errors #
#######################################

# This blanket rule ensures ANY analyzer warning becomes a build error
# Individual rules below can override this for specific cases
dotnet_analyzer_diagnostic.severity = warning

#######################################
# Core C# Coding Conventions          #
#######################################
csharp_style_namespace_declarations = file_scoped:warning
csharp_using_directive_placement = inside_namespace:warning

#######################################
# IDE Analyzers                       #
#######################################
dotnet_diagnostic.IDE0005.severity = error   # Remove unnecessary usings
dotnet_diagnostic.IDE0010.severity = suggestion # Populate switch (impractical for large enums)
